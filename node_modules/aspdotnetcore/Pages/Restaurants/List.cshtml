@page 
@model AspDotnetCore.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}
<div class="text-center">
<h1>Restaurants</h1>
</div>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class= "btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div> 
</form>

 <table class="table table-bordered">
    <tr>
        <th>Restaurants Name</th>
        <th>Location</th>
        <th>Cuisine</th>
        <th>Modification</th>
    </tr>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-info" role="button"
                   asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                    Detail 
                </a>
                <a class="btn btn-info"
                   asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                   Edit
                </a>
                <a class="btn btn-info"
                   asp-page="./Delete" asp-route-restaurantId="@restaurant.Id">
                   Delete
                </a>
                
            </td>
        </tr>
    }
</table> 
